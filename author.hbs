{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- Author Hero Section --}}
<section class="author-hero">
    <div class="container">
        {{#author}}
        <div class="author-hero-inner">
            <div class="author-hero-image">
                {{#if profile_image}}
                <img src="{{img_url profile_image size="l"}}" alt="{{name}}" />
                {{else}}
                <div class="author-hero-avatar">{{> "icons/avatar"}}</div>
                {{/if}}
            </div>
            <div class="author-hero-content">
                <h1 class="author-hero-name">{{name}}</h1>
                {{#if bio}}
                <p class="author-hero-bio">{{bio}}</p>
                {{/if}}
                <div class="author-hero-meta">
                    {{#if location}}
                    <span class="author-hero-location">{{> "icons/location"}} {{location}}</span>
                    {{/if}}
                    <span class="author-hero-posts">{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</span>
                </div>
                <div class="author-hero-social">
                    {{#if website}}
                    <a href="{{website}}" class="author-social-link" target="_blank" rel="noopener">
                        {{> "icons/link"}}
                    </a>
                    {{/if}}
                    {{#if twitter}}
                    <a href="{{social_url type="twitter"}}" class="author-social-link" target="_blank" rel="noopener">
                        {{> "icons/twitter"}}
                    </a>
                    {{/if}}
                    {{#if facebook}}
                    <a href="{{social_url type="facebook"}}" class="author-social-link" target="_blank" rel="noopener">
                        {{> "icons/facebook"}}
                    </a>
                    {{/if}}
                    {{#if linkedin}}
                    <a href="{{social_url type="linkedin"}}" class="author-social-link" target="_blank" rel="noopener">
                        {{> "icons/linkedin"}}
                    </a>
                    {{/if}}
                    {{#if bluesky}}
                    <a href="{{social_url type="bluesky"}}" class="author-social-link" target="_blank" rel="noopener">
                        {{> "icons/bluesky"}}
                    </a>
                    {{/if}}
                    {{#if threads}}
                    <a href="{{social_url type="threads"}}" class="author-social-link" target="_blank" rel="noopener">
                        {{> "icons/threads"}}
                    </a>
                    {{/if}}
                    {{#if instagram}}
                    <a href="{{social_url type="instagram"}}" class="author-social-link" target="_blank" rel="noopener">
                        {{> "icons/instagram"}}
                    </a>
                    {{/if}}
                    {{#if youtube}}
                    <a href="{{social_url type="youtube"}}" class="author-social-link" target="_blank" rel="noopener">
                        {{> "icons/youtube"}}
                    </a>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/author}}
    </div>
</section>

{{!-- Posts by Author --}}
<section class="content-section">
    <div class="container">
        <header class="section-header">
            <h2 class="section-title">Posts by {{#author}}{{name}}{{/author}}</h2>
        </header>

        <div class="post-feed feed-magazine">
            {{#foreach posts}}
            {{> "post-card"}}
            {{/foreach}}
        </div>

        {{!-- Pagination --}}
        {{#if pagination.pages}}
        {{#if pagination.next}}
        <nav class="pagination">
            <a href="{{pagination.next}}" class="pagination-btn pagination-next">
                <span>Load more posts</span>
                {{> "icons/arrow-down"}}
            </a>
        </nav>
        {{/if}}
        {{/if}}
    </div>
</section>
