{
    "name": "enjin-inspired",
    "description": "A modern, feature-rich Ghost theme inspired by Enjin - Magazine style blog with animations and dark mode",
    "demo": "https://enjin.themex.studio",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "Umer Aamir",
        "email": "umer@example.com",
        "url": "https://github.com/umeraamir09"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Magazine",
            "Blog",
            "Modern"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "magazine",
        "blog",
        "modern",
        "dark-mode",
        "responsive"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/umeraamir09/Terminal-Adventure.git"
    },
    "bugs": "https://github.com/umeraamir09/Terminal-Adventure/issues",
    "devDependencies": {
        "@tryghost/release-utils": "0.8.1",
        "autoprefixer": "10.4.23",
        "beeper": "2.1.0",
        "cssnano": "7.1.2",
        "gscan": "5.2.2",
        "gulp": "5.0.1",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "6.1.0",
        "inquirer": "13.2.0",
        "postcss": "8.5.6",
        "postcss-color-mod-function": "4.1.1",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.3"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 12,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": [
                    "Logo on left",
                    "Logo centered",
                    "Minimal"
                ],
                "default": "Logo on left"
            },
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif",
                    "Display"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "show_hero_section": {
                "type": "boolean",
                "default": true,
                "group": "homepage"
            },
            "hero_style": {
                "type": "select",
                "options": [
                    "Featured slider",
                    "Large featured",
                    "Grid featured",
                    "Minimal"
                ],
                "default": "Featured slider",
                "group": "homepage"
            },
            "feed_layout": {
                "type": "select",
                "options": [
                    "Magazine grid",
                    "Classic list",
                    "Masonry",
                    "Cards"
                ],
                "default": "Magazine grid",
                "group": "homepage"
            },
            "color_scheme": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark",
                    "Auto"
                ],
                "default": "Auto"
            },
            "accent_color_style": {
                "type": "select",
                "options": [
                    "Vibrant",
                    "Subtle",
                    "Gradient"
                ],
                "default": "Vibrant"
            },
            "show_reading_progress": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_toc": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "post_image_style": {
                "type": "select",
                "options": [
                    "Wide",
                    "Full bleed",
                    "Contained",
                    "Hidden"
                ],
                "default": "Wide",
                "group": "post"
            },
            "show_share_buttons": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_author_card": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "email_signup_text": {
                "type": "text",
                "default": "Get the latest posts delivered to your inbox",
                "group": "post"
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "footer_text": {
                "type": "text",
                "default": ""
            },
            "enable_animations": {
                "type": "boolean",
                "default": true
            }
        }
    },
    "renovate": {
        "extends": [
            "@tryghost:theme"
        ]
    }
}
