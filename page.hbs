{{!< default}}
{{!-- The tag above means: insert everything in this file into the {body} tag of the default.hbs template --}}

{{#post}}
{{!-- Everything inside the #post block pulls data from the page --}}

<article class="article page-article {{post_class}}">
    {{#match @page.show_title_and_feature_image}}
    <header class="page-header">
        <div class="container">
            <h1 class="page-title">{{title}}</h1>
            
            {{#if feature_image}}
            <figure class="page-feature-image">
                <img srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(min-width: 1400px) 1400px, 92vw"
                    src="{{img_url feature_image size="xl"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="eager" />
                {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            </figure>
            {{/if}}
        </div>
    </header>
    {{/match}}

    <div class="page-body">
        <div class="container">
            <section class="page-content gh-content">
                {{content}}
            </section>
        </div>
    </div>
</article>

{{/post}}
