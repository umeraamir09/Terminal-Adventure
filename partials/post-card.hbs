{{!-- Post Card Partial - Modern magazine style card --}}

<article class="post-card {{post_class}}{{#if featured}} post-card-featured{{/if}}{{#unless feature_image}} post-card-no-image{{/unless}}">
    {{!-- Card Image --}}
    {{#if feature_image}}
    <a href="{{url}}" class="post-card-image-link" aria-label="Read {{title}}">
        <div class="post-card-image-wrapper">
            <img class="post-card-image"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w"
                sizes="(max-width: 600px) 100vw, (max-width: 1000px) 50vw, 400px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                loading="lazy" />
            <div class="post-card-image-overlay"></div>
            
            {{!-- Reading time badge --}}
            {{#if reading_time}}
            <span class="post-card-reading-badge">{{reading_time}}</span>
            {{/if}}
        </div>

        {{!-- Access indicator for members content --}}
        {{#unless access}}
        {{^has visibility="public"}}
        <div class="post-card-access-badge">
            {{> "icons/lock"}}
            <span>{{#has visibility="members"}}Members{{else}}Paid{{/has}}</span>
        </div>
        {{/has}}
        {{/unless}}
    </a>
    {{/if}}

    {{!-- Card Content --}}
    <div class="post-card-content">
        {{!-- Meta tags --}}
        <div class="post-card-meta-top">
            {{#primary_tag}}
            <a href="{{url}}" class="post-card-tag">{{name}}</a>
            {{/primary_tag}}
            {{#if featured}}
            <span class="post-card-featured-badge">{{> "icons/fire"}} Featured</span>
            {{/if}}
        </div>

        {{!-- Title --}}
        <h3 class="post-card-title">
            <a href="{{url}}">
                {{#unless access}}
                {{^has visibility="public"}}
                {{#unless feature_image}}
                {{> "icons/lock"}}
                {{/unless}}
                {{/has}}
                {{/unless}}
                {{title}}
            </a>
        </h3>

        {{!-- Excerpt --}}
        {{#if excerpt}}
        <p class="post-card-excerpt">{{excerpt words="25"}}</p>
        {{/if}}

        {{!-- Bottom Meta --}}
        <footer class="post-card-meta">
            {{!-- Author --}}
            {{#primary_author}}
            <a href="{{url}}" class="post-card-author">
                {{#if profile_image}}
                <img src="{{img_url profile_image size="xs"}}" alt="{{name}}" class="post-card-author-image" />
                {{/if}}
                <span class="post-card-author-name">{{name}}</span>
            </a>
            {{/primary_author}}

            {{!-- Date --}}
            <time class="post-card-date" datetime="{{date format="YYYY-MM-DD"}}">
                {{date format="MMM D, YYYY"}}
            </time>

            {{!-- Comments count --}}
            {{#if @site.comments_enabled}}
            {{comment_count}}
            {{/if}}
        </footer>
    </div>
</article>
