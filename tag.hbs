{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- Tag Hero Section --}}
<section class="tag-hero{{#tag}}{{#if feature_image}} has-image{{/if}}{{/tag}}">
    {{#tag}}
    {{#if feature_image}}
    <div class="tag-hero-image">
        <img srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="100vw"
            src="{{img_url feature_image size="xl"}}"
            alt="{{name}}"
            loading="eager" />
        <div class="tag-hero-overlay"></div>
    </div>
    {{/if}}
    {{/tag}}
    <div class="container">
        {{#tag}}
        <div class="tag-hero-content{{#if feature_image}} has-image{{/if}}">
            <span class="tag-hero-label">Tag</span>
            <h1 class="tag-hero-name">{{name}}</h1>
            {{#if description}}
            <p class="tag-hero-description">{{description}}</p>
            {{else}}
            <p class="tag-hero-description">A collection of {{plural ../pagination.total empty='zero posts' singular='% post' plural='% posts'}}</p>
            {{/if}}
        </div>
        {{/tag}}
    </div>
</section>

{{!-- Posts in Tag --}}
<section class="content-section">
    <div class="container">
        <div class="post-feed feed-magazine">
            {{#foreach posts}}
            {{> "post-card"}}
            {{/foreach}}
        </div>

        {{!-- Pagination --}}
        {{#if pagination.pages}}
        {{#if pagination.next}}
        <nav class="pagination">
            <a href="{{pagination.next}}" class="pagination-btn pagination-next">
                <span>Load more posts</span>
                {{> "icons/arrow-down"}}
            </a>
        </nav>
        {{/if}}
        {{/if}}
    </div>
</section>
